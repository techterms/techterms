---
import ContributeButton from './ContributeButton.astro';
import { Categories, CategoriesMetadata } from '../models/Categories';
import { definitions } from '../data/definitions';

// Get unique categories from definitions
const allCategories = Object.values(Categories);
const usedCategories = [...new Set(definitions.flatMap(def => def.categories))];
---

<aside class="w-64 space-y-8 border-r border-gray-200 bg-white p-6">
  <!-- Category Filter Section -->
  <div class="space-y-4">
    <h3 class="mb-4 text-lg font-semibold text-gray-900">Categories</h3>
    <div class="space-y-2">
      {
        allCategories.map(category => {
          const isUsed = usedCategories.includes(category);
          const count = definitions.filter(def => def.categories.includes(category)).length;
          return (
            <button
              class={`w-full rounded-lg px-3 py-2 text-left transition-colors duration-200 ${
                isUsed
                  ? 'text-gray-700 hover:bg-gray-100 hover:text-gray-900'
                  : 'cursor-not-allowed text-gray-400'
              }`}
              disabled={!isUsed}
            >
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium">{CategoriesMetadata[category].label}</span>
                {isUsed && (
                  <span class="rounded-full bg-gray-100 px-2 py-1 text-xs text-gray-600">
                    {count}
                  </span>
                )}
              </div>
            </button>
          );
        })
      }
    </div>
  </div>

  <!-- GitHub CTA Section -->
  <div class="rounded-xl border border-gray-200 bg-gradient-to-br from-gray-50 to-gray-100 p-4">
    <div class="space-y-3 text-center">
      <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-gray-900">
        <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </div>
      <div>
        <h4 class="text-sm font-semibold text-gray-900">Contribute to Tech Terms</h4>
        <p class="mt-1 text-xs text-gray-600">Help us expand our knowledge base</p>
      </div>
      <ContributeButton />
    </div>
  </div>
</aside>
